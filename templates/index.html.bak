{% extends "layout.html" %}

{% block title %}Home - Date Extractor & Calendar Generator{% endblock %}

{% block styles %}
<style>
    /* Dark mode specific styles */
    [data-bs-theme="dark"] {
        --hero-bg-gradient: linear-gradient(125deg, #14122b 0%, #1e1b42 100%);
        --hero-title-gradient: linear-gradient(90deg, #f0f0f0, #c0abff);
        --hero-dots-color: rgba(142, 110, 255, 0.5);
        --card-bg: var(--dark-card-bg);
        --step-bg: var(--dark-card-bg);
        --text-color: var(--dark-text);
        --text-muted: var(--dark-text-secondary);
        --scrollbar-track: #1a1a2e;
        --scrollbar-thumb: var(--dark-primary);
        --step-circle-bg: rgba(109, 91, 236, 0.2);
        --step-circle-hover: rgba(109, 91, 236, 0.5);
        --dropzone-border: 2px dashed rgba(142, 110, 255, 0.3);
        --dropzone-bg: rgba(30, 28, 50, 0.5);
        --dropzone-hover-shadow: 0 20px 40px rgba(77, 62, 230, 0.3);
        --upload-icon-color: var(--dark-primary);
        --upload-icon-hover: var(--dark-hover);
        --btn-shadow: 0 10px 25px rgba(109, 91, 236, 0.4);
        --dropzone-hover-border: rgba(142, 110, 255, 0.6);
    }
    
    /* Light mode specific styles */
    [data-bs-theme="light"] {
        --hero-bg-gradient: linear-gradient(125deg, #f0f9ff 0%, #e0f1ff 100%);
        --hero-title-gradient: linear-gradient(90deg, #1a73e8, #0076e4);
        --hero-dots-color: rgba(31, 151, 255, 0.3);
        --card-bg: var(--light-card-bg);
        --step-bg: var(--light-card-bg);
        --text-color: var(--light-text);
        --text-muted: var(--light-text-secondary);
        --scrollbar-track: #e0f1ff;
        --scrollbar-thumb: var(--light-primary);
        --step-circle-bg: rgba(31, 151, 255, 0.15);
        --step-circle-hover: rgba(31, 151, 255, 0.3);
        --dropzone-border: 2px dashed rgba(31, 151, 255, 0.3);
        --dropzone-bg: rgba(240, 249, 255, 0.7);
        --dropzone-hover-shadow: 0 20px 40px rgba(0, 118, 228, 0.2);
        --upload-icon-color: var(--light-primary);
        --upload-icon-hover: var(--light-hover);
        --btn-shadow: 0 10px 25px rgba(31, 151, 255, 0.3);
        --dropzone-hover-border: rgba(31, 151, 255, 0.6);
    }
    
    .hero-section {
        position: relative;
        min-height: 60vh;
        overflow: hidden;
        background: var(--hero-bg-gradient);
        border-radius: 1rem;
        margin-bottom: 3rem;
        box-shadow: 0 15px 30px var(--shadow-color);
    }
    
    .hero-content {
        position: relative;
        z-index: 2;
        padding: 4rem 0;
    }
    
    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        opacity: 0.5;
        background-image: radial-gradient(var(--hero-dots-color) 0.5px, transparent 0.5px);
        background-size: 25px 25px;
    }
    
    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        background: var(--hero-title-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: titleFade 1.5s ease-in-out;
    }
    
    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 2rem;
        opacity: 0;
        color: var(--text-color);
        animation: subtitleFade 1.5s ease-in-out 0.5s forwards;
    }
    
    .floating-card {
        transform: translateY(50px);
        opacity: 0;
        animation: floatUp 1s ease-out 1s forwards;
        background-color: var(--card-bg) !important;
    }
    
    .step-item {
        transform: translateX(-50px);
        opacity: 0;
        transition: all 0.5s ease;
    }
    
    .step-item.active {
        transform: translateX(0);
        opacity: 1;
    }
    
    .list-group-item {
        background-color: var(--step-bg) !important;
        color: var(--text-color) !important;
    }
    
    .text-muted {
        color: var(--text-muted) !important;
    }
    
    .dropzone {
        position: relative;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        cursor: pointer;
        border: var(--dropzone-border);
        background: var(--dropzone-bg);
        backdrop-filter: blur(10px);
        overflow: hidden;
    }
    
    .dropzone::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, var(--bs-primary), var(--accent-color));
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 0;
    }
    
    .dropzone:hover {
        transform: scale(1.05) translateY(-5px);
        border-color: var(--dropzone-hover-border);
        box-shadow: var(--dropzone-hover-shadow);
    }
    
    .dropzone:hover::before {
        opacity: 0.1;
    }
    
    .dropzone-content {
        position: relative;
        z-index: 1;
    }
    
    .upload-icon {
        font-size: 5rem;
        margin-bottom: 1rem;
        color: var(--upload-icon-color);
        transition: all 0.4s ease;
    }
    
    .dropzone:hover .upload-icon {
        transform: translateY(-10px);
        color: var(--upload-icon-hover);
    }
    
    .file-upload-btn {
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }
    
    .file-upload-btn:hover {
        transform: translateY(-3px);
        box-shadow: var(--btn-shadow);
    }
    
    .file-upload-btn input[type="file"] {
        position: absolute;
        top: 0;
        right: 0;
        min-width: 100%;
        min-height: 100%;
        font-size: 100px;
        text-align: right;
        filter: alpha(opacity=0);
        opacity: 0;
        outline: none;
        cursor: pointer;
        display: block;
    }
    
    .form-upload {
        opacity: 0;
        transform: translateY(30px);
        animation: formFade 1s ease 1.8s forwards;
    }
    
    .calendar-section {
        transform: scale(0.95);
        opacity: 0;
        animation: calendarFade 1s ease 2s forwards;
    }
    
    /* Animations */
    @keyframes titleFade {
        0% { opacity: 0; transform: translateY(-30px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes subtitleFade {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 0.8; transform: translateY(0); }
    }
    
    @keyframes floatUp {
        0% { transform: translateY(50px); opacity: 0; }
        100% { transform: translateY(0); opacity: 1; }
    }
    
    @keyframes formFade {
        0% { opacity: 0; transform: translateY(30px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes calendarFade {
        0% { transform: scale(0.95); opacity: 0; }
        100% { transform: scale(1); opacity: 1; }
    }
    
    /* Particle effect */
    .particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }
    
    /* Custom scrollbar for list */
    .steps-container {
        max-height: 400px;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-track);
    }
    
    .steps-container::-webkit-scrollbar {
        width: 6px;
    }
    
    .steps-container::-webkit-scrollbar-track {
        background: var(--scrollbar-track);
        border-radius: 10px;
    }
    
    .steps-container::-webkit-scrollbar-thumb {
        background: var(--scrollbar-thumb);
        border-radius: 10px;
    }
    
    /* Animation indicators */
    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--step-circle-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.5rem;
        margin-right: 1rem;
        transition: all 0.4s ease;
        color: var(--bs-primary);
    }
    
    .step-item:hover .step-circle {
        background: var(--step-circle-hover);
        transform: scale(1.1);
    }
    
    /* Card header */
    .card-header {
        background-color: var(--nav-bg) !important;
        border-bottom: var(--card-border);
    }
</style>
{% endblock %}

{% block content %}
<div class="hero-section">
    <div class="hero-bg"></div>
    <div class="particles" id="particles-js"></div>
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="hero-title">Transform Your Syllabus Into Calendar Events</h1>
                <p class="hero-subtitle">Extract important dates, assignments, and deadlines with a single click</p>
                <div class="d-flex gap-3 mt-4">
                    {% if not current_user.is_authenticated %}
                    <a href="{{ url_for('google_auth.login') }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-google me-2"></i> Login with Google
                    </a>
                    <a href="{{ url_for('microsoft_auth.login') }}" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-microsoft me-2"></i> Login with Microsoft
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-5 mb-4 mb-lg-0">
        <div class="card border-0 shadow-lg h-100 floating-card">
            <div class="card-header bg-dark border-0">
                <h4 class="text-white m-0 py-3">How It Works</h4>
            </div>
            <div class="card-body p-0">
                <div class="steps-container">
                    <div class="list-group list-group-flush step-item" data-step="1">
                        <div class="list-group-item bg-dark text-white border-0 p-4">
                            <div class="d-flex align-items-center">
                                <div class="step-circle">1</div>
                                <div>
                                    <h5>Upload Your Document</h5>
                                    <p class="text-muted mb-0">Drag and drop or select your syllabus file</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="list-group list-group-flush step-item" data-step="2">
                        <div class="list-group-item bg-dark text-white border-0 p-4">
                            <div class="d-flex align-items-center">
                                <div class="step-circle">2</div>
                                <div>
                                    <h5>Smart Date Extraction</h5>
                                    <p class="text-muted mb-0">Our AI identifies important deadlines and assignments</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="list-group list-group-flush step-item" data-step="3">
                        <div class="list-group-item bg-dark text-white border-0 p-4">
                            <div class="d-flex align-items-center">
                                <div class="step-circle">3</div>
                                <div>
                                    <h5>Preview Events</h5>
                                    <p class="text-muted mb-0">Review extracted dates and make any necessary adjustments</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="list-group list-group-flush step-item" data-step="4">
                        <div class="list-group-item bg-dark text-white border-0 p-4">
                            <div class="d-flex align-items-center">
                                <div class="step-circle">4</div>
                                <div>
                                    <h5>Export to Calendar</h5>
                                    <p class="text-muted mb-0">Send events directly to Google or Microsoft calendar</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="list-group list-group-flush step-item" data-step="5">
                        <div class="list-group-item bg-dark text-white border-0 p-4">
                            <div class="d-flex align-items-center">
                                <div class="step-circle">5</div>
                                <div>
                                    <h5>Stay Organized</h5>
                                    <p class="text-muted mb-0">Never miss another deadline with automatic reminders</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-7">
        <div class="dropzone rounded-4 shadow-lg p-5 mb-4">
            <div class="dropzone-content text-center">
                <i class="bi bi-cloud-arrow-up upload-icon"></i>
                <h3 class="text-white mb-3">Drag & Drop Your Syllabus</h3>
                <p class="text-muted mb-4">Support for PDF, Word documents, and text files</p>
                <form action="{{ url_for('upload_file') }}" method="post" enctype="multipart/form-data" class="dropzone-form">
                    <button type="button" class="btn btn-primary btn-lg file-upload-btn px-4 py-2">
                        <i class="bi bi-file-earmark-text me-2"></i> Browse Files
                        <input type="file" id="file" name="file" required>
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card border-0 shadow-lg mb-4 form-upload">
            <div class="card-header bg-dark text-white border-0">
                <h4 class="mb-0 py-2">Upload Document</h4>
            </div>
            <div class="card-body p-4">
                <form action="{{ url_for('upload_file') }}" method="post" enctype="multipart/form-data">
                    <div class="input-group input-group-lg">
                        <input class="form-control" type="file" id="file-form" name="file" required>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-magic me-2"></i> Extract Dates
                        </button>
                    </div>
                    <div class="form-text mt-2 text-center">Supported formats: .txt, .pdf, .docx, .doc</div>
                </form>
            </div>
        </div>
        
        {% if not current_user.is_authenticated %}
        <div class="card border-0 shadow-lg calendar-section">
            <div class="card-body p-4">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                            <i class="bi bi-calendar-check text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                    <div class="col">
                        <h4>Calendar Integration</h4>
                        <p class="text-muted mb-0">Connect with Google Calendar or Microsoft Outlook for seamless event creation</p>
                    </div>
                    <div class="col-auto">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                Connect Calendar
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="{{ url_for('google_auth.login') }}">
                                        <i class="bi bi-google me-2"></i> Google Calendar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ url_for('microsoft_auth.login') }}">
                                        <i class="bi bi-microsoft me-2"></i> Microsoft Outlook
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const dropzone = document.querySelector('.dropzone');
        const fileInput = document.getElementById('file');
        
        if (dropzone && fileInput) {
            // Prevent default behaviors
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropzone.addEventListener(eventName, preventDefaults, false);
            });
            
            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }
            
            // Highlight dropzone when item is dragged over it
            ['dragenter', 'dragover'].forEach(eventName => {
                dropzone.addEventListener(eventName, highlight, false);
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                dropzone.addEventListener(eventName, unhighlight, false);
            });
            
            function highlight() {
                dropzone.classList.add('bg-primary');
                dropzone.classList.remove('bg-dark');
            }
            
            function unhighlight() {
                dropzone.classList.remove('bg-primary');
                dropzone.classList.add('bg-dark');
            }
            
            // Handle dropped files
            dropzone.addEventListener('drop', handleDrop, false);
            
            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                
                if (files.length) {
                    fileInput.files = files;
                    // Auto-submit the form after successful drop
                    fileInput.form.submit();
                }
            }
        }
    });
</script>
{% endblock %}
